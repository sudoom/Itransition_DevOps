{
  "variables": {
    "cpus": "2",
    "memory": "4096",
    "disk_size": "15000",
    "headless": "false",
    "iso_checksum": "b17d7c1e9d0321ad5810ba77b69aef43f0f29a5422b08120e6ee0576c4527c0e",
    "iso_checksum_type": "sha256",
    "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.6-server-amd64.iso"
  },
  "builders": [
    {
      "type": "qemu",
      "accelerator": "kvm",
      "display": "sdl",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "headless": "{{user `headless`}}",
      "disk_size": "{{user `disk_size`}}",
      "vm_name": "packer-ubuntu-14.04.6-amd64",
      "boot_wait": "5s",
      "boot_command": [
        "<esc><esc><enter><wait>",
        "/install/vmlinuz ",
        "noapic ",
        "debian-installer=en_US ",
        "auto locale=en_US ",
        "kbd-choser/method=us ",
        "keyboard-configuration/modelcode=SKIP ",
        "keyboard-configuration/layout=USA ",
        "keyboard-configuration/variant=USA ",
        "console-setup/ask_detect=false ",
        "hostname={{ .Name}} ",
        "fb=false ",
        "grub-installer/bootdev=/dev/vda ",
        "initrd=/install/initrd.gz ",
        "debconf/frontend=noninteractive ",
        "preseed/url=http://{{ .HTTPIP}}:{{ .HTTPPort}}/preseed.cfg <wait>",
        "<enter><wait>"
      ],
      "ssh_timeout": "60m",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": "22",
      "http_directory": "http",
      "http_port_min": "9002",
      "http_port_max": "9002",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "qemuargs": [
        [
          "-m",
          "{{user `memory`}}"
        ],
        [
          "-smp",
          "{{user `cpus`}}"
        ]
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "8",
      "output": "ubuntu-14.04.6-amd64-{{ .Provider}}.box"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/setup.sh"
      ],
      "execute_command": "echo 'vagrant' | sudo -S sh '{{ .Path}}'"
    }
  ]
}